<% provide(:title, "ホーム") %>
<div class="margin">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.label "社員番号" %>
        <%= f.text_field :employee_number, class: 'form-control' %>
        <%= f.label "パスワード" %>
        <%= f.password_field :password, class: 'form-control' %>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>